@model SupCommerce.Web.Areas.Admin.ViewModels.ProductFormViewModel

@{
    ViewBag.Title = "Product Form";
}

<form asp-action="Save" method="post">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" v-model="$v.name.$model"/>
                <div class="alert alert-danger" v-if="!$v.name.required && $v.name.$dirty">The name field is required.</div>
            </div>
            
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" class="form-control" asp-for="Price" v-model="$v.price.$model"/>
                <div class="alert alert-danger" v-if="!$v.price.required && $v.price.$dirty">The price field is required.</div>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <textarea type="text" class="form-control" asp-for="ShortDescription" ></textarea>
            </div>
            
            <div class="form-group">
                <label asp-for="FullDescription"></label>
                <textarea type="text" class="form-control" asp-for="FullDescription"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select class="form-control" v-model="$v.category.$model" asp-items="@Model.GetDropdownModel" asp-for="CategoryId">
                    <option value="">Select a category</option>
                </select>
                <div class="alert alert-danger" v-if="!$v.category.required && $v.category.$dirty">The category field is required.</div>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" :disabled="$v.$invalid">Submit</button>
            </div>
        </div>
    </div>
</form>
@section scripts
{
    <script src="~/scripts/admin-product.js"></script>
}

