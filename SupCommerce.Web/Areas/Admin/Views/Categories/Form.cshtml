@model SupCommerce.Web.Areas.Admin.ViewModels.CategoryFormViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Save" method="post">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" v-model="$v.name.$model"/>
                <div class="alert alert-danger" v-if="!$v.name.required && $v.name.$dirty">The name field is required.</div>
            </div>
            <div class="form-group">
                <label asp-for="ParentCategoryId"></label>
                <select class="form-control" asp-items="@Model.GetDropdownModel" asp-for="ParentCategoryId">
                    <option value="">Select a category</option>
                </select>
                @*input type="text" class="form-control" v-model="$v.name.$model"/>
                <div class="alert alert-danger" v-if="!$v.name.required && $v.name.$dirty">The name field is required.</div>*@
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" :disabled="$v.$invalid">Submit</button>
            </div>
        </div>
    </div>
</form>
@section scripts
{
    <script src="~/scripts/admin-category.js"></script>
}
